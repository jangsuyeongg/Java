import java.util.Scanner;

import BookInfor.JoinDataSet;
import BookInfor.JoinVO;

public class Login {
	private final String USERID = "admin";
	private final String USERPWD = "1234";
	
	public Login() {
		
	}
	// 로그인 체크 구현 (true:로그인성공, false:로그인실패)
	public boolean loginCheck(String userid, String userpwd) {
		if(userid.equals(USERID)&& userpwd.equals(USERPWD)){
			//로그인성공
			return true;
		}else {
			//로그인 실패
			return false;
		}
	}
	
	public boolean loginCheck2(String id, String pwd) {
		if(JoinDataSet.joinList.containsKey(id)){
			if(JoinDataSet.joinList.containsValue(pwd)) {
				System.out.println("로그인 되었습니다.");
				return true;
					
			}else {
				System.out.println("정보가 일치하지 않습니다.");
				return false;
			}
		}
		return false;
	}

	
	
	
	
	
	
	// 로그인 체크 구현 (true:로그인성공, false:로그인실패)
	
